<div class="comments">
  {{#each this}}
    <div class="card">

      <div class="comment card-body">
        <div class="comment">
            {{body}}
        </div>
        
        <div>
          <p class="card-text">Posted by {{user.name}} on {{format_date date_created}} </p>
        </div>
          
      </div>
      
    </div>
  {{/each}}
</div>